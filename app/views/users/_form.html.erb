<%= render 'shared/errors', obj: @user %>

<div class='row'>
    <div class='col-md-12'>
        
        <%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
            
            <div class='form-group'>
                <div class='col-sm-2'>
                    <%= f.label :username, class: 'control-label' %>
                </div>
                <div class='col-sm-8'>
                    <%= f.text_field :username, class: 'form-control', placeholder: 'Enter your Username', autofocus: true %>
                </div>
            </div>
            <div class='form-group'>
                <div class='col-sm-2'>
                    <%= f.label :email, class: 'control-label' %>
                </div>
                <div class='col-sm-8'>
                    <%= f.email_field :email, class: 'form-control', placeholder: 'Email address' %>
                </div>
            </div>
            <div class='form-group'>
                <div class='col-sm-2'>
                    <%= f.label :password, class: 'control-label' %>
                </div>
                <div class='col-sm-8'>
                    <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
                </div>
            </div>
            <div class='form-group'>
                <div class='col-sm-offset-2 col-sm-10'>
                <%= f.submit( @user.new_record? ? "Sign up" : "Update your account", class: 'btn btn-primary') %>
                </div>
            </div>
        <% end %>
        
        <div class='col-sm-offset-4 col-sm-4'>
            <%= link_to "Cancel request and return to articles listing", articles_path %>
        </div>

    </div>
</div>