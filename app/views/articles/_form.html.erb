<%= render 'shared/errors', obj: @article %>

<div class='row'>
    <div class='col-md-12'>
        
        <%= form_for(@article, html: {class: 'form-horizontal'}) do |f| %>
            
            <div class='form-group'>
                <div class='col-sm-2'>
                    <%= f.label :title, class: 'control-label' %>
                </div>
                <div class='col-sm-8'>
                    <%= f.text_field :title, class: 'form-control', placeholder: 'Article title', autofocus: true %>
                </div>
            </div>
            <div class='form-group'>
                <div class='col-sm-2'>
                    <%= f.label :description, class: 'control-label' %>
                </div>
                <div class='col-sm-8'>
                    <%= f.text_area :description, class: 'form-control', placeholder: 'Description of article', rows: 10 %>
                </div>
            </div>
            
            <div class='form-group'>
                <div class='row'>
                    <div class='col-sm-offset-2 col-sm-10'>
                        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|  %>
                            <% cb.label(class: 'checkbox-inline input-checkbox') {cb.check_box(class: 'checkbox') + cb.text} %>
                        <% end %>
                    </div>
                </div>
            </div>
            
            <div class='form-group'>
                <div class='col-sm-offset-2 col-sm-10'>
                <%= f.submit class: 'btn btn-primary' %>
                </div>
            </div>
            
        <% end %>
        
        <div class='col-sm-offset-4 col-sm-4'>
            <%= link_to "Cancel request and return to articles listing", articles_path %>
        </div>

    </div>
</div>